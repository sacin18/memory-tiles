<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sacin.remembertiles.RememberTiles"
    android:backgroundTint="#96ffffff"
    android:backgroundTintMode="src_atop"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib1"
        android:src="@drawable/i0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxHeight="10dp"
        android:maxWidth="10dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib2"
        android:src="@drawable/i0"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:layout_alignTop="@+id/ib1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib3"
        android:src="@drawable/i0"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:layout_alignTop="@+id/ib2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib4"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_below="@+id/ib1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib5"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib6"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib5"
        android:layout_alignStart="@+id/ib3" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib7"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib8"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib8"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib9"
        android:layout_alignStart="@+id/ib5" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib9"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ib6" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib10"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_below="@+id/ib7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib11"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib10"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib12"
        android:src="@drawable/i0"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignTop="@+id/ib11"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start game"
        android:id="@+id/showButton"
        android:height="70dp"
        android:width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ib12" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="1000dp"
        android:id="@+id/imgBack"
        android:layout_alignParentStart="true"
        android:alpha="0.8"
        android:src="@drawable/white"
        android:layout_alignBottom="@+id/ib10"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score is 100"
        android:id="@+id/scoreView"
        android:width="400dp"
        android:height="240dp"
        android:textSize="100dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:alpha="1"
        android:textColor="#000000"
        android:layout_alignTop="@+id/ib4"
        android:layout_alignParentStart="true" />

</RelativeLayout>
